<div class="container card card-2 create-task">
    <div class="card-header">
        <h5>Create New To-Do Task</h5>
    </div>
    <div class="card-body">
        <div class="form-group">
            <div class="row">
                <div class="col-md-12">
                    <label class="control-label">Description : </label>
                    {{input type="text" value=model.desc class="form-control" placeholder="Enter task description" }}
                </div>
            </div>
            <div class="row my-2">
                <div class="col-md-6">
                    <label class="control-label">Status : </label>
                    <select onchange={{action "setStatus" value="target.value" }}>
                        {{#each statuses as |status|}}
                        <option value={{status.value}}>
                            {{status.name}}
                        </option>
                        {{/each}}
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="control-label">Priority : </label>
                    <select onchange={{action "setPriority" value="target.value" }}>
                        {{#each priorities as |priority|}}
                        <option value={{priority.value}}>
                            {{priority.name}}
                        </option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="row my-2">
                <div class="col-md-4" style="padding-top:5px;">
                    <label class="control-label">Enable Reminder :</label>
                    {{input type="checkbox" checked=model.reminderenabled class="input-md"}}
                </div>
                <div class="col-md-8">
                    <label class="control-label">Due Date:</label>
                    <div class="date-input">
                        {{bs-datetimepicker date=model.deadline allowInputToggle=true}}
                    </div>
                </div>
            </div>
            {{#if model.reminderenabled}}
            <div class="row my-2">
                <div class="col-md-12">
                    <label class="control-label">Reminder Date:</label>
                    <div class="date-input">
                        {{bs-datetimepicker date=model.reminderdate allowInputToggle=true showClose=true}}
                    </div>
                </div>
            </div>
            <div class="row my-2">
                <div class="col-md-12">
                    <label class="control-label">Enable Email Notification :</label>
                    {{input type="checkbox" checked=model.enablemail class="input-md"}}
                </div>

            </div>
            {{/if}}


        </div>
    </div>

    <div class=" card-footer row my-2">
        <div class="col-md-12 text-center">
            <button class="btn btn-primary btn-sm" onclick={{action 'saveTask' model}}>Save </button>
            <button class="btn btn-danger btn-sm" onclick={{action 'cancelSave'}}>Cancel </button>
        </div>
    </div>
</div>