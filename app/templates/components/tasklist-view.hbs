<div class="card-body">
    <div class="card-title">
        <span class="tasks-header">

        </span>
    </div>
    <div>
        {{#each model as |task|}}
        <a onclick={{action 'onEditTask' task}} class="list-group-item card-1 list-group-item-action flex-column align-items-start">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">{{task.desc}}</h5>
            </div>
            <p class="mb-1"></p>
            <div>
                <div class="date-input">
                    <fieldset disabled>
                        {{bs-datetimepicker date=task.deadline}}
                    </fieldset>

                </div>
                <button onclick={{action 'deleteTask' task}} class="btn btn-danger btn-xs">
                    <i class="fa fa-trash"></i>
                </button>



            </div>



            <div class="status-input">
                <small>Status :</small>
                <span class="badge badge-pill badge-primary">{{task.status}}</span>

                <small>Priority :</small>
                <span class={{task.priorityClass}}>{{task.priority}}</span>

                {{#if task.reminderenabled}}
                <span class="float-right fa fa-bell text-orange fa-2x"></span>
                {{/if}} {{#if task.enablemail}}
                <span class="float-right fa fa-envelope text-green fa-2x mx-2"></span>
                {{/if}}
            </div>

        </a>
        {{/each}} {{task-view activeTask=activeTask redirect="redirect"}}
    </div>
</div>