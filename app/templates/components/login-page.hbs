{{! app/templates/components/login-page.hbs }}

<div class="container login-container">

    <div class="card text-center ">
        <div class="card-header bg-primary text-white">
            <h2>To-Do App</h2>
        </div>
        <div class="card-body">
            <h5 class="card-title ">Signin to view your To-Do List !!</h5>
            <p class="card-text"></p>
            <form {{action 'authenticate' on='submit' }}>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    {{input value=login type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter
                    email"}}
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    {{input value=password class="form-control" id="exampleInputPassword1" placeholder="Password" type='password'}}
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="card-footer text-muted">
            Freshworks
        </div>
    </div>
</div>
<!-- container -->